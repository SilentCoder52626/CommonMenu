@model MenuDetailsViewModel
@{
    Layout = null;
}
<div class="container-fluid">
    <table border="0" width="100%">
        <thead>
            <tr>
                <td class="center">
                    <img src="@Model.Company.LogoModel.Path" style="max-height:100px;" alt="Company Logo" />
                    <h4>@Model.Company.Name</h4>
                    <p>@Model.Company.Address</p>
                </td>
            </tr>

        </thead>
        <tbody>
            <tr>
                <td>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td style="text-align: left; padding-left: 10px; padding-right: 10px;">
                    <a href="@Model.Company.Website">
                        <i class="fas fa-globe"></i> @Model.Company.Website
                    </a>
                    <span class="center">
                        <i class="fas fa-phone"></i> Contact: @Model.Company.MobileNumber,@Model.Company.LandLineNumber
                    </span>
                    <span style="float: right;">
                        Designed By CommonWorld
                    </span>
                </td>
            </tr>
        </tfoot>
    </table>
</div>